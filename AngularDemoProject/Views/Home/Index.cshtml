
<div class="col-md-12" ng-app="DemoApp" ng-controller="LoginController">
    <div class="main-login col-xs-12 col-xs-offset-2 col-sm-4 col-sm-offset-3" style="margin-top:100px">
        <!-- start: LOGIN BOX -->
        <div class="row padBox" style="position: relative;padding-right: 0px;">
            <div class="col-sm-12">
                <div class="loginHeader">
                    <div class="">
                        <div style="margin-bottom:10px">
                            <label style="width:100%;margin-top:20px !important" class="btn btn-primary text-white">DEMO PROJECT LOGIN</label>
                        </div>
                        <div class="form-group">
                            @Html.Label("Username", htmlAttributes: new { @class = "control-label col-md-12 text-center text-bold" })
                            <div class="col-md-12">
                                <input type="text" class="form-control" ng-model="username" />
                                <br />
                                <br />
                            </div>
                            @Html.Label("Password", htmlAttributes: new { @class = "control-label col-md-12 text-center text-bold" })
                            <div class="col-md-12">
                                <input type="text" class="form-control" ng-model="password" />
                                <br />
                                <br />
                                <br />
                            </div>
                        </div>
                        <div class="center">
                            <input type="submit" value="Login" ng-click="Login()" class="btn btn-info" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

